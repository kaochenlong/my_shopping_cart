<h1>購物車</h1>

<%= link_to '清空購物車', cart_path, method: "delete", class:"btn btn-default btn-success" %>

<table class="table table-hover">
  <thead>
    <tr>
      <td>商品名稱</td>
      <td>數量</td>
      <td>單價</td>
      <td>小計</td>
    </tr>
  </thead>
  <tbody>
    <% @cart.items.each do |item| %>
    <tr>
      <td><%= item.product.title %></td>
      <td><%= item.quantity %></td>
      <td><%= item.product.price %></td>
      <td><%= item.total_price %></td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="3">總計</td>
      <td><%= @cart.total_price %></td>
    </tr>
  </tfoot>
</table>

<%= link_to '繼續選購', products_path, class:"btn btn-default btn-primary" %>
<%= link_to '結帳', checkout_cart_path, class:"btn btn-default btn-danger" unless @cart.empty? %>
